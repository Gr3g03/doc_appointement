// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id             Int        @id @default(autoincrement())

  userName       String     @unique
  email          String     @unique
  password       String     @default("")
  firstName      String     @default("")
  lastName       String     @default("")
  address        String     @default("")
  bio            String     @default("")
  phone          String     @default("")
  avatar         String     @default("")

  isDoctor       Boolean    @default(false)

  postedAppointements  Appointement[] @relation("normalUser")
  acceptedAppointemets Appointement[] @relation("doctor")
  bids                 Bid[]
}

model Category {
  id            Int            @id @default(autoincrement())

  category_name String
  category_logo String

  appointements Appointement[]
}

model Appointement {
  id          Int      @id @default(autoincrement())

  price       Int
  deadline    String
  title       String
  description String
  status      Int
  
  normalUser  User?    @relation("normalUser", fields: [user_id], references: [id])
  user_id     Int?
  
  doctor      User     @relation("doctor", fields: [doctor_id], references: [id])
  doctor_id   Int
  
  category    Category @relation(fields: [category_id], references: [id])
  category_id Int

  bids        Bid[]
}

model Bid {
  id           Int          @id @default(autoincrement())

  appointement  Appointement @relation(fields: [appointment_id], references: [id])
  appointment_id   Int
  
  bids         Int

  normalUser   User         @relation(fields: [user_id], references: [id])
  user_id      Int
}